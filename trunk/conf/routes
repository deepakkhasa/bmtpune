# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET /appmentlogin							controllers.Application.login

# Dashboard
GET /dashboard							controllers.Application.dashboard
GET /getApptmentsForPhone				controllers.Application.androidDashboard
POST /updateDetails						controllers.Application.updateDetails
GET /getDoctors							controllers.Application.getDoctors
GET /getDoctorAppointments				controllers.Application.getDoctorAppointments
POST /addAppointment                    controllers.Application.putAppointment
GET /getMyAppointments					controllers.Application.getMyAppointments
GET /getAppointmentDetails				controllers.Application.getAppointmentDetails(id:Long) 
#Take Appointment
GET /takeappointment					controllers.Application.takeAppointment
GET /contactus							controllers.Application.contactus
GET /aboutus							controllers.Application.aboutus
GET /knowledgecenter					controllers.Application.knowledgeCenter
GET /videos								controllers.Application.videos
# Login page
GET     /login                      securesocial.controllers.LoginPage.login
GET     /logout                     securesocial.controllers.LoginPage.logout

# User Registration
GET     /signup                     securesocial.controllers.Registration.signUp
POST    /signup                     securesocial.controllers.Registration.handleSignUp

GET     /authenticate/:provider     securesocial.controllers.LoginPage.authenticate(provider)
POST    /authenticate/:provider     securesocial.controllers.LoginPage.authenticateByPost(provider)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
